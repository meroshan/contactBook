<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    {% block head_title %}
        <title>ContactBook</title>
    {% endblock %}
    {% block head_style %}
        <link href="{{ asset('bundles/contactbook/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet"/>
        <link href="{{ asset('bundles/contactbook/vendor/bootstrap/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/contactbook/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    {% endblock %}

    {% block head_script %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>
        <script src="{{ asset('bundles/contactbook/vendor/bootbox.min.js') }}"></script>
        <script src="{{ asset('bundles/contactbook/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('bundles/contactbook/vendor/bootstrap/js/bootstrap.js') }}"></script>
    {% endblock %}
</head>
{% block body %}
    <body style="background-color: #BDBDBD">
    {% block navbar %}
        <nav class="navbar navbar-inverse navbar-fixed-top " role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand"  href="{{ path('dashboard')  }}">ContactBook</a>
                </div>

                {% block navitem %}
                {% endblock %}

                {% if is_granted("ROLE_USER") %}
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('fos_user_security_logout') }}"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
                    </ul>
                {% endif %}
                </div>
        </nav>
    {% endblock %}
    <div class="container">
        {% block content %}
        {% endblock %}
    </div>
    <div class="container">
        {% block recent %}
        {% endblock %}
    </div>
    <footer class="nav navbar-default navbar-fixed-bottom" style="margin-bottom:5px;" syrole="footerinfo">
        <div class="container">
            {% block footer_content %}
                All rights reserved &copy;
            {% endblock %}
        </div>
    </footer>
    {% block foot_script %}
    {% endblock %}
    </body>
{% endblock %}
</html>
